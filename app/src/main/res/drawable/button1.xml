<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#8a8a8a" />
            <corners android:radius="3dp" />
            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="3dp" />
            <gradient android:angle="45.0" android:centerColor="#fff" android:centerX="45%" android:endColor="#fff" android:startColor="#fff" android:type="linear" />
            <size android:width="250dp" android:height="30dp" />
            <stroke android:width="2dp" android:color="#fff" />
        </shape>
    </item>
</selector>
